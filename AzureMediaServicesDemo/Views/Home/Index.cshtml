@{
    ViewBag.Title = "Home Page";
}

<link href="//amp.azure.net/libs/amp/1.8.3/skins/amp-default/azuremediaplayer.min.css" rel="stylesheet">
<script src="//amp.azure.net/libs/amp/1.8.3/azuremediaplayer.min.js"></script>
<div id="content">
    <div class="row">
        <div class="col-md-4">
            <div id="drag-and-drop-zone" class="uploader">
                <div>Drag &amp; Drop Video File Here</div>
                <div class="or">-or-</div>
                <div class="browser">
                    <label>
                        <span>Click to open the file Browser</span>
                        <input type="file" name="files[]" multiple="multiple" title='Click to add Files'>
                    </label>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <ol id="log"></ol>
        </div>
    </div>

    <video id="azuremediaplayer" class="azuremediaplayer amp-default-skin amp-big-play-centered" tabindex="0"></video>
</div>